<UserControl x:Class="boss.client.win.PageHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d" Foreground="{StaticResource DefaultForground}"
    d:DesignHeight="300" d:DesignWidth="300">

    <Border Background="{StaticResource PageHeaderBackground}" Height="38">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="⌘" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" FontSize="22" Margin="2,0" Grid.Column="0"/>
            <TextBlock Text="{Binding Title}" Foreground="{StaticResource DefaultForground}" VerticalAlignment="Center" FontSize="16" Grid.Column="1"/>
            <Button Style="{StaticResource ApplicationTabItemCloseButtonStyle}" Click="Close_OnClick" Grid.Column="4"/>
        </Grid>
    </Border>

</UserControl>
