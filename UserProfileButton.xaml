<UserControl 
    x:Class="boss.client.win.UserProfileButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:boss.client.win"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid>
        <Button>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="32" Height="32" CornerRadius="16" Background="#7EB0C4DE">
                        <TextBlock Text="W" FontFamily="Arial" FontSize="18" Foreground="#D84682B4" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>

</UserControl>
